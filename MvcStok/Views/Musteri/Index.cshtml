@using MvcStok.Models.Entity
@model List<Tbl_Musteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>Müşteri Id</th>
        <th>Müşteri Ad</th>
        <th>Müşteri Soyad</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var mstr in Model)
    {
        <tr>
            <th>@mstr.MusteriId</th>
            <td>@mstr.MusteriAd</td>
            <td>@mstr.MusteriSoyad</td>
            <td><a href="/Musteri/Sil/@mstr.MusteriId" class="btn btn-danger">SİL</a></td>
            <td><a href="/Musteri/Guncelle/@mstr.MusteriId" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>
