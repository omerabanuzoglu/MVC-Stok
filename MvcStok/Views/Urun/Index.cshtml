@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Ürün Id</th>
        <th>Ürün Adı</th>
        <th>Ürün Kategori</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var urn in Model)
    {
        <tr>
            <th>@urn.UrunId</th>
            <td>@urn.UrunAd</td>
            <td>@urn.Tbl_Kategori.KategoriId</td>
            <td>@urn.Fiyat</td>
            <td><a href="/Urun/Sil/@urn.UrunId" class="btn btn-danger">SİL</a></td>
            <td><a href="/Urun/UrunGetir/@urn.UrunId" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa}))
<a href="/Urun/UrunEkle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>